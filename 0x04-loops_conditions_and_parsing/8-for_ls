#!/usr/bin/env bash
#prints directory contents starting from dash
touch contents
ls >> contents
for i in $(cat contents)
do
	print=1
	dash=0
        echo "$i" >> temp_file
	bytes=$(wc -m temp_file | cut -b 1-2)
        for ((j=1; j<bytes; j++))
        do
		b=$(cut -b $j temp_file)
                if [ "$b" = "-" ]
                then
			if [ "$print" = "1" ]
			then
				((j++))
                        	cut -b $j- temp_file
				((j--))
				print=0
				dash=1
				break
			fi
                fi;
	done
	if [ "$dash" = "0" ]
	then
		var=$(cat temp_file)
		if [ "$var" = "contents" ]
		then
			a=0
		else
			cut -b 1- temp_file
		fi
	fi
	rm temp_file
done
rm contents
